<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/backgroundBlue</item>
        <item name="colorPrimaryDark">@color/backgroundBlue</item>
        <item name="colorAccent">@color/accentYellow</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerDropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/buttonBlue</item>
    </style>
</resources>